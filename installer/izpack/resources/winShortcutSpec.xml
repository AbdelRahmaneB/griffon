<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<shortcuts>
  <skipIfNotSupported/>

  <programGroup defaultName="$appGroup"
                location="applications"/>

  <shortcut
    name="Griffon Guide @griffon.version@"
    target="$INSTALL_PATH\guide\index.html"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Griffon Guide"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    iconFile="$INSTALL_PATH\media\griffon.ico"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

  <shortcut
    name="Uninstall"
    target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Uninstall Griffon"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

</shortcuts>
