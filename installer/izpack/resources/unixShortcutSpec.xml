<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <programGroup defaultName="Griffon-@griffon.version@" location="applications"/>

    <shortcut
            name="Griffon Guide @griffon.version@"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="/usr/bin/firefox"
            commandLine="&quot;$INSTALL_PATH/guide/index.html&quot;"
            initialState="maximized"
            iconFile="help"
            iconIndex="0"
            workingDirectory=""
            type="Application"
            encoding="UTF-8"
            KdeSubstUID="true"
            KdeUsername="root"
            createForAll="false"
            Categories="Application;Development;"
            description="Griffon Guide @griffon.version@">
    </shortcut>

    <shortcut
            name="Griffon @griffon.version@ Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="/usr/bin/java"
            commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
            initialState="noShow"
            iconFile="trashcan_full"
            iconIndex="0"
            workingDirectory=""
            type="Application"
            encoding="UTF-8"
            KdeSubstUID="true"
            KdeUsername="root"
            createForAll="false"
            Categories="Application;Development;"
            description="This uninstalls Griffon @griffon.version@">
    </shortcut>
</shortcuts>
